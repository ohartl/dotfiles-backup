#    name = Firstname Lastname
#    email = your@email.local
#    username = yourusername


[alias]
    a = add
    s = status
    b = branch
    br = branch
    co = checkout
    c = commit
    diff = diff --word-diff
    d = diff --word-diff
    dc = diff --cached --word-diff
    unstage = reset HEAD --
    last = log -1 HEAD
    m = merge --no-ff --
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    lasttag = describe --tags --abbrev=0
    la = "!git config -l | grep alias | cut -c 7-"
# https://gist.github.com/pksunkara/988716

################# less important stuff ############

[core]
    editor = vim
    #autocrlf = false
    autocrlf = input
    #whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.gitignore_global

[push]
    default = simple

[diff]
    ignoreSubmodules = dirty

[pager]
    log = ~/.dotfiles/bin/diff-highlight | less
    show = ~/.dotfiles/bin/diff-highlight | less
    diff = ~/.dotfiles/bin/diff-highlight | less

[interactive]
    diffFilter = ~/.dotfiles/bin/diff-highlight

[color]
    ui = always

[color "diff"]
    commit = green
    meta = yellow
    frag = cyan
    old = red
    new = green
    whitespace = red reverse

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[commit]
    verbose = true

[apply]
    # Detect whitespace errors when applying a patch
    whitespace = fix

[credential]
    helper = cache --timeout=3600

[help]
    autocorrect = 1

# Use `origin` as the default remote on the `master` branch in all cases
#[branch "master"]
#    remote = origin
#    merge = refs/heads/master

# URL shorthands
[url "git@github.com:"]
    insteadOf = "gh:"
    pushInsteadOf = "github:"
    pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
    insteadOf = "github:"
[url "git@gist.github.com:"]
    insteadOf = "gst:"
    pushInsteadOf = "gist:"
    pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
    insteadOf = "gist:"



################# Allow local customizations in the ~/.gitconfig.local file ############

[include]
    path = ~/.dotfiles/files/.gitconfig.ohartl
    path = .gitconfig.local

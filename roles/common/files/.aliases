# php dev commands
function phing() {
    (
    git rev-parse --git-dir > /dev/null 2>&1
    if (($? > 0)); then
        local phing_path="vendor/bin/phing"
        if [ -f "$phing_path" ]; then
            $phing_path ${@}
        else
            echo "phing could not be found in $phing_path"
        fi
    else
        local phing_path="$(git rev-parse --show-toplevel)/vendor/bin/phing"
        if [ -f "$phing_path" ]; then
            $phing_path ${@}
        else
            echo "phing could not be found in $phing_path"
        fi
    fi
    )
}
alias p='phing'


# less fuckery

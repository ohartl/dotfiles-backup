# Auto sudo prefixes
for __cmd in apt apt-get apt-add-repository service; do
  eval "alias $__cmd='sudo $__cmd'"
done ; unset __cmd


# Allow local customizations in the ~/.aliases.local file
[ -f ~/.aliases.local ] && source ~/.aliases.local

# http://editorconfig.org
# TODO: look into using advanced defaults of phpstorm and other ide's like `../../.shell_editor`

root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
max_line_length=140
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{md,rst,in}]
indent_style = ignore
indent_size = ignore
